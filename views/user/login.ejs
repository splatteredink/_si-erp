
<form method="POST" name="login_form" id="login_form" action="/user/login">
	<div class="form-group">
		<div class="input-group">
			<span class="input-group-addon"><i class="icon-envelope"></i></span>
			<input type="text" name="login_email_address" id="login_username" class="form-control" placeholder="Email or Username">
		</div>
	</div>
	<div class="form-group">
		<div class="input-group">
			<span class="input-group-addon"><i class="icon-lock"></i></span>
			<input type="password" name="login_password" class="form-control" placeholder="Password">
		</div>
	</div>
	<a class="pull-right" href="#">Forgot password?</a>
	<div class="form-group">
		<label class="checkbox"><input type="checkbox">Keep me logged in</label>
	</div>
	<div class="form-actions">
	    <input type="hidden" name="_csrf" value="<%= _csrf %>" />
	    <input type="submit", value="Log in", class="btn btn-lg btn-primary btn-block login-submit">
	</div>
	<p>
  		Don't have an account yet?
	</p>
	<a class="btn btn-default-outline btn-block" href="/user/signup">Sign up now</a>
</form>