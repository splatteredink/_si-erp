<div class="container-fluid main-content">
	<div class="page-title">
		<h1>Ticket Dashboard</h1>
	</div>
	<div class="row">
		<div class="col-lg-12">
			<ul class="breadcrumb">
				<li>
					<a href="#"></a><i class="icon-home"></i>
				</li>
				<li>
					<a href="#">UI</a>
				</li>
				<li class="active">
					Components
				</li>
			</ul>
		</div>
	</div>
	<div class="row">	
		<div class="col-lg-6">
			<div class="row">
				<a href="/ticket/newticket" class="btn btn-lg btn-primary">Compose Ticket</a>
			</div>
		</div>
	</div>
	<div class="row">
		<div class="col-lg-12">
			<div class="widget-container fluid-height">
				<div class="heading tabs">
					<i class="icon-sitemap"></i>Tabs  
					<ul class="nav nav-tabs pull-right" data-tabs="tabs" id="tabs">
						<li class="active">
							<a data-toggle="tab" href="#tab1"><i class="icon-comments"></i><span>Open Tickets</span></a>
						</li>
						<li>
							<a data-toggle="tab" href="#tab2"><i class="icon-user"></i><span>Closed Tickets</span></a>
						</li>
					</ul>
				</div>
				<% _.each(mytickets, function(ticket) { %>
					<div class="tab-content padded" id="my-tab-content">
						<div class="tab-pane active" id="tab1">
							<%if (ticket.ticket_status == 'open') { %>
								<h3>
									<%= ticket.ticket_subject %>
								</h3>
								<p>
									<%= ticket.ticket_message %>
								</p>
							<% }else{ %>	
								<h3>
									No Open Tickets
								</h3>
							<% } %>
						</div>
						<div class="tab-pane" id="tab2">
							<%if (ticket.ticket_status == 'close') { %>
								<h3>
									<%= ticket.ticket_subject %>
								</h3>
								<p>
									<%= ticket.ticket_message %>
								</p>
							<% }else{ %>
								<h3>
									No Close Tickets
								</h3>
							<% } %>
						</div>
					</div>
				<% }) %>
			</div>
		</div>
	</div>
</div>