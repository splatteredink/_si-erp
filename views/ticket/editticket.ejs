<div class="container-fluid main-content">
	<div class="page-title">
		<h1>Ticket Details</h1>
	</div>
	<div class="row">
		<div class="col-lg-12">
			<ul class="breadcrumb">
				<li>
					<a href="#"></a><i class="icon-home"></i>
				</li>
				<li>
					<a href="#">UI</a>
				</li>
				<li class="active">
					Components
				</li>
			</ul>
		</div>
	</div>
	<div class="row">	
		<div class="col-lg-6">
			<div class="row">
				<div class="widget-content padded">
					<form method="post" action="/ticket/updateticket" id="ticket_form">
						<div class="form-group">
							<label class="control-label col-lg-3" for="ticket_full_name">Full Name</label>
							<div class="col-lg-9">
								<input class="form-control" type="text" name="ticket_full_name" value="<%= ticket.user_fullname %>" placeholder="Enter your full name" id="tick_full_name">
							</div>
						</div>
						<div class="form-group">
							<label class="control-label col-lg-3" for="ticket_email_address">Email Address</label>
							<div class="col-lg-9">
								<input class="form-control" type="text" value="<%= ticket.user_email %>" name="ticket_email_address" placeholder="Enter your email address" id="tick_email">
							</div>
						</div>
						<div class="form-group">
							<label class="control-label col-lg-3" for="ticket_type">Help Topic</label>
							<div class="col-lg-9">
								<select class="form-control" id="ticket_type" name="ticket_type">
									<option value="">--Select Ticket Type--</option>
									<option value="issue">Issue</option>
									<option value="bug">Bug Reporting</option>
									<option value="change_request">Change Request</option>
									<option value="other_problem">Other Problem</option>
								</select>
							</div>
						</div>
						<div class="form-group">
							<label class="control-label col-lg-3" for="ticket_subject">Subject</label>
							<div class="col-lg-9">
								<input class="form-control" type="text" value="<%= ticket.ticket_subject %>" name="ticket_subject" placeholder="Enter ticket subject" id="tick_subject">
							</div>
						</div>
						<div class="form-group">
							<label class="control-label col-lg-3" for="ticket_desc">Description</label>
							<div class="col-lg-9">
								<textarea class="form-control" name="ticket_desc" rows="3"><%= ticket.ticket_message %></textarea>
							</div>
						</div>
						<div class="form-actions col-lg-offset-3 col-lg-9">
							<input type="hidden" name="_csrf" value="<%= _csrf %>" />
							<button class="btn btn-primary" type="submit">Update Ticket</button>
							<button class="btn btn-default-outline" >Cancel</button>
						</div>
					</form>
				</div>
			</div>
		</div>
	</div>
</div>