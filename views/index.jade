extends layout

block content
  body.login
  .login-container
    form(method='post', id='login_form')
        .form-group
          .input-group
            span.input-group-addon
              i.icon-envelope
            input.form-control(type='text', name='email_address', value='', placeholder='Email or Username')
        .form-group
          .input-group
            span.input-group-addon
              i.icon-lock
            input.form-control(type='password', name='password', value='', placeholder='Password')
        a.pull-right(href='/forgotpassword') Forgot password?
        .form-group
          label.checkbox
            input(type='checkbox')
            | Keep me logged in
        input.btn.btn-lg.btn-primary.btn-block.login-submit(type='submit', name='submit_login', value='Log in', id='login_button')
                
        p
          | Don't have an account yet?
        a.btn.btn-default-outline.btn-block(href='/signup') Sign up now
