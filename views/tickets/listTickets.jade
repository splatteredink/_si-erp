extends layout

block content
  .container-fluid.main-content
    .page-title
      h1
        | Ticket List
    // DataTables Example
    .row
      .col-lg-12
        .widget-container.fluid-height.clearfix
          .widget-content.padded.clearfix
            table#dataTable1.table.table-bordered.table-striped
              thead
                tr
                  th
                    | Full Name
                  th
                    | Email
                  th.hidden-xs
                    | Ticket Subject
                  th.hidden-xs
                    | Date Added
                  th.hidden-xs
                    | Status
                  th
              tbody
                each ticket in ticket_list
                  tr
                    td
                      =ticket.user_fullname
                    td
                      =ticket.user_email
                    td.hidden-xs
                      =ticket.ticket_subject
                    td.hidden-xs
                      | 8-15-2013
                    td.hidden-xs
                      span.label.label-success #{ticket.ticket_status}
                    td.actions
                      .action-buttons
                        a.table-actions(href='')
                          i.icon-eye-open
                        a.table-actions(href='')
                          i.icon-pencil
                        a.table-actions.delete_ticket(href='/tickets/deleteticket?ticket_id='+ticket.ticket_id)
                          i.icon-trash
                
    // end DataTables Example
